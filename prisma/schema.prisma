generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id              String @id @unique
  name            String
  email           String
  password        String
  confirmPassword String

  @@map("admin")
}

model Movies {
  id          String @id @unique
  title       String @unique
  description String
  image       String

  @@map("movies")
}

model Netflix {
  id          String @id @unique
  title       String @unique
  description String
  image       String

  @@map("netflix")
}

model User {
  id              String @id @unique
  name            String
  cpf             String @unique
  email           String @unique
  password        String
  confirmPassword String

  @@map("user")
}
